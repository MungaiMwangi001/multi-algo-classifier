# Application Settings
APP_NAME=ML Workbench API
APP_VERSION=1.0.0
DEBUG=false

# API Settings
API_V1_PREFIX=/api
HOST=0.0.0.0
PORT=8000

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]

# Database
DATABASE_URL=sqlite:///./ml_workbench.db

# File Storage
UPLOAD_DIR=uploads
MODELS_DIR=models
LOGS_DIR=logs

# ML Settings
MAX_FILE_SIZE=52428800  # 50MB
SUPPORTED_FILE_TYPES=[".csv", ".xlsx", ".xls"]
DEFAULT_TEST_SIZE=0.2
DEFAULT_RANDOM_STATE=42

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Model Persistence
MODEL_RETENTION_DAYS=30
